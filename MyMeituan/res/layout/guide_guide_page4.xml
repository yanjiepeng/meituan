<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guide_page_4">

    <Button
        android:id="@+id/btn_guide_customer"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_guide_button"
        android:text="@string/enter_customer"
        android:textColor="@color/half_white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_guide_celler"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_guide_customer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_guide_button"
        android:text="@string/enter_seller"
        android:textColor="@color/half_white"
        android:textSize="20sp" />

</RelativeLayout>