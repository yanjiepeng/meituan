<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_location_main"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#22ff0000"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/et_showlocation_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="定位"
            android:textSize="10sp" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_ad_main"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <LinearLayout
        android:id="@+id/ll_point_main"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/indicator1_main"
            style="@style/point_image" />

        <ImageView
            android:id="@+id/indicator2_main"
            style="@style/point_image"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/indicator3_main"
            style="@style/point_image"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/indicator4_main"
            style="@style/point_image"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/indicator5_main"
            style="@style/point_image"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ffffffff" />

    <LinearLayout
        android:id="@+id/ll_point_cate_main"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#22ff0000"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="好吃你就多吃点"
            android:textColor="@color/recommand_foodtext_color"
            android:textSize="15sp" />

        <RadioGroup
            android:id="@+id/ll_recommand_main"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="5"
            android:background="#22ff0000"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/left_firstfoodrecommend_firstpager"
                style="@style/radio_button"
                android:drawableTop="@drawable/ic_launcher"
                android:textSize="12sp"
                android:text="@string/left_firstfoodrecommend" />

            <RadioButton
                android:id="@+id/left_secondfoodrecommend_firstpager"
                style="@style/radio_button"
                android:drawableTop="@drawable/ic_launcher"
                android:text="@string/left_firstfoodrecommend"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/left_thirdfoodrecommend_firstpager"
                style="@style/radio_button"
                android:drawableTop="@drawable/ic_launcher"
                android:text="@string/left_firstfoodrecommend"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/left_forthfoodrecommend_firstpager"
                style="@style/radio_button"
                android:textSize="12sp"
                android:drawableTop="@drawable/ic_launcher"
                android:text="@string/left_firstfoodrecommend" />
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ffffffff" />

</LinearLayout>