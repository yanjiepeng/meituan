<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_container_home"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="28" >

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp  "
        android:background="@color/halfgrey" />

    <LinearLayout
        android:id="@+id/ll_container_home"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#FCFCFC"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FCFCFC" >

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_marginLeft="20dp"
                android:paddingRight="20dp">

                <Button
                    android:id="@+id/btn_category_home"
                    style="@style/HomeMenuStyle"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/takeout_ic_poi_selected" />

                <TextView
                    android:id="@+id/tv_category_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/btn_category_home"
                    android:layout_marginLeft="10dp"
                    android:text="@string/shouye"
                    android:textColor="@color/gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_centerHorizontal="true" >

                <Button
                    android:id="@+id/btn_order_home"
                    style="@style/HomeMenuStyle"
                    android:background="@drawable/takeout_ic_order_normal" />

                <TextView
                    android:id="@+id/tv_order_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/btn_order_home"
                    android:layout_below="@id/btn_order_home"
                    android:text="@string/order"
                    android:textColor="@color/gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" 
                android:layout_marginRight="20dp"
                android:paddingRight="10dp"
             >

                <Button
                    android:id="@+id/btn_mine_home"
                    android:layout_marginLeft="20dp"
                    style="@style/HomeMenuStyle"
                    android:background="@drawable/takeout_ic_user_normal" />

                <TextView
                    android:id="@+id/tv_mine_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:layout_alignLeft="@id/btn_mine_home"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/btn_mine_home"
                    android:text="@string/mine"
                    android:textColor="@color/gray" />
                </RelativeLayout>
                
            </RelativeLayout>
            </LinearLayout>
    </LinearLayout>
