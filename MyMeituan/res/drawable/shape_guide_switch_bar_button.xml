<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    
    <!-- 点击背景 -->
    <item android:state_pressed="true"><shape android:shape="oval">

            <!-- 色值 -->
            <solid android:color="@color/half_black" />
            <!-- 描边 -->
            <stroke android:width="2dp" android:color="@color/half_white" />

            <size android:height="16dp" android:width="16dp" />
        </shape></item>

    <!-- 默认背景 -->
    <item><shape android:shape="oval">
            <solid android:color="@color/transparent" />

            <stroke android:width="2dp" android:color="@color/half_white" />

            <size android:height="16dp" android:width="16dp" />
        </shape></item>

</selector>